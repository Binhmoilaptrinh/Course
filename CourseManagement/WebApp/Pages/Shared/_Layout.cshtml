    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
            crossorigin="anonymous"></script>

    <style>
        /* Hộp chat động */
        #chat-container {
            position: fixed;
            bottom: 80px;
            right: 20px;
            width: 320px;
            background: white;
            border-radius: 10px;
            box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.2);
            display: none;
            flex-direction: column;
            z-index: 999;
            cursor: grab; /* Cho phép kéo */
        }

        /* Header của chatbox */
        #chat-header {
            background: #007bff;
            color: white;
            padding: 10px;
            display: flex;
            justify-content: space-between;
            align-items: center;
            border-top-left-radius: 10px;
            border-top-right-radius: 10px;
            cursor: move; /* Kéo thả */
        }

        /* Nội dung chat */
        #chat-body {
            height: 300px;
            overflow-y: auto;
            padding: 10px;
        }

        /* Footer chat */
        #chat-footer {
            display: flex;
            padding: 10px;
        }

        #chat-input {
            flex: 1;
            padding: 5px;
            border: 1px solid #ccc;
            border-radius: 5px;
        }

        #chat-send {
            background: #007bff;
            color: white;
            border: none;
            padding: 5px 10px;
            margin-left: 5px;
            cursor: pointer;
        }

        /* Nút mở chat */
        #chat-toggle {
            position: fixed;
            bottom: 20px;
            right: 20px;
            background: #007bff;
            color: white;
            border: none;
            padding: 10px 15px;
            border-radius: 50%;
            cursor: pointer;
            box-shadow: 0px 2px 5px rgba(0, 0, 0, 0.2);
        }

        /* Khi hiển thị hộp chat */
        #chat-container.active {
            display: flex;
        }

    </style>
</head>
<body>
    <div id="header">
        <nav class="container">
            <div class="nav_menu-btn">
                <i class="fa-solid fa-bars"></i>
            </div>
            <a asp-page="/Homepage/Index" class="logo">
                <h2 class="logo_name">TVCdev</h2>
            </a>
            <div class="nav_search">
                <form method="get" id="formSearch">
                    <i class="fa-solid fa-magnifying-glass nav_search-searchBtn"></i>
                    <input type="text" name="searchTxt" placeholder="Tìm kiếm khóa học, bài viết, video..." class="input_box">
                    <button type="submit">
                        <i class="fa-solid fa-xmark nav_search-removeBtn"></i>
                    </button>
                </form>
            </div>

            <!-- User Authentication Section (Uses Local Storage) -->
            <div class="nav_menu-user" id="authSection">
                <!-- Authentication UI will be inserted here by JavaScript -->
            </div>
        </nav>
    </div>

    @RenderBody()

    <!-- Footer -->
    <div id="footer" class="mt-100 p-5">
        <div class="footer-wrapper">
            <div class="footer-col col-20 col-full mb-30">
                <h3 class="footer__logo">
                    <a href="">TVCdev</a>
                </h3>
                <p class="footer__des">
                    Nullam nisi magna, tempor vita nulla sed,
                    portal sodaless tortor Aenean at sodaless portals.
                </p>
                <div class="footer__social">
                    <a href="" class="footer__icon"><i class="fa-brands fa-facebook-f"></i></a>
                    <a href="" class="footer__icon"><i class="fa-brands fa-twitter"></i></a>
                    <a href="" class="footer__icon"><i class="fa-brands fa-vimeo-v"></i></a>
                    <a href="" class="footer__icon"><i class="fa-brands fa-linkedin-in"></i></a>
                </div>
            </div>
        </div>
        <div class="footer-copyright">
            <p>Copyright Cuong tran TVCdev 24/2/2023, All right Reserved</p>
        </div>
    </div>

    <!-- Scroll to Top Button -->
    <a href="#" id="scroll-top">
        <i class="fa-sharp fa-solid fa-shuttle-space icon-scroll"></i>
    </a>


    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const userInfo = JSON.parse(localStorage.getItem("userInfo"));
            const authSection = document.getElementById("authSection");

            if (userInfo) {
                // Populate user account section with stored user data
                authSection.innerHTML = `
                                <div class="">
                                        <a href="/Homepage/MyCourse/${userInfo.userId}" class="nav_menu-myLearn text-decoration-none">Khóa học của tôi</a>
                            </div>
                            <div class="nav_menu-user-notifi">
                                <i class="fa-solid fa-bell"></i>
                            </div>
                        <div class="nav_menu-user-account">
                            <div class="account-image">
                                <img id="accountImage" src="${userInfo.avatar}" alt="Profile Picture">
                            </div>
                            <div id="userNav" class="user-nav">
                                <ul class="p-0">
                                    <a class="d-flex align-items-center text-decoration-none" href="/Homepage/Profile">
                                        <div>
                                            <div>
                                                        <img src="${userInfo.avatar}" alt="User Avatar">
                                            </div>
                                        </div>
                                        <div class="ms-4">
                                                    <span class="fw-bold fs-4 text-dark">${userInfo.userName}</span>
                                                    <div class="fs-5 text-muted">${userInfo.email || ''}</div>
                                        </div>
                                    </a>
                                    <hr>
                                    <ul class="p-0">
                                        <li>
                                            <a class="fs-4 text-muted text-decoration-none" href="/Homepage/EditProfile">Trang cá nhân</a>
                                        </li>
                                    </ul>
                                    <hr>
                                    <ul class="p-0">
                                        <li>
                                                    <a class="fs-4 text-muted text-decoration-none" href="/Homepage/MyCourse/${userInfo.userId}">Khóa học của tôi</a>
                                        </li>
                                    </ul>
                                    <hr>
                                    <ul class="p-0">
                                        <li class="py-2">
                                            <a href="/Homepage/Editprofile" class="fs-4 text-muted text-decoration-none">Cài đặt</a>
                                        </li>
                                        <li class="py-2">
                                            <a href="#" onclick="logout()" class="fs-4 text-muted text-decoration-none">Đăng xuất</a>
                                        </li>
                                    </ul>
                                </ul>
                            </div>
                        </div>
                    `;
            } else {
                // If user is NOT logged in
                authSection.innerHTML = `
                        <a href="/Authentication/Signup" class="text-decoration-none register-btn d-none d-md-block"> Đăng ký</a>
                        <a href="/Authentication/Login" class="text-decoration-none login-btn" style="border-radius: 15px;">Đăng nhập</a>
                    `;
            }

            // **Fix clicking issue on account image**
            setTimeout(() => {
                const accImg = document.getElementById("accountImage");
                const userNav = document.getElementById("userNav");

                if (accImg) {
                    accImg.addEventListener("click", function () {
                        userNav.classList.toggle("showUserNav");
                    });
                }
            }, 100);
        });

        function logout() {
            localStorage.removeItem("userInfo");
            window.location.href = "/Authentication/Login"; // Redirect after logout
        }
    </script>

    <!-- Chatbox động -->
    <div id="chat-container">
        <div id="chat-header">
            <span>Chat với TVC AI</span>
            <button id="chat-close">&times;</button>
        </div>
        <div id="chat-body"></div>
        <div id="chat-footer">
            <input type="text" id="chat-input" placeholder="Nhập câu hỏi...">
            <button id="chat-send"><i class="fa-solid fa-paper-plane"></i></button>
        </div>
    </div>

    <!-- Nút mở chat -->
    <button id="chat-toggle">
        <i class="fa-solid fa-comment-dots"></i>
    </button>


    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const chatContainer = document.getElementById("chat-container");
            const chatToggle = document.getElementById("chat-toggle");
            const chatClose = document.getElementById("chat-close");
            const chatSend = document.getElementById("chat-send");
            const chatInput = document.getElementById("chat-input");
            const chatBody = document.getElementById("chat-body");
            const chatHeader = document.getElementById("chat-header");

            // Mở/Tắt chatbox
            chatToggle.addEventListener("click", () => chatContainer.classList.toggle("active"));
            chatClose.addEventListener("click", () => chatContainer.classList.remove("active"));

            // Gửi tin nhắn
            chatSend.addEventListener("click", async () => {
                const question = chatInput.value.trim();
                if (!question) return;

                // Hiển thị tin nhắn của người dùng
                chatBody.innerHTML += `<div style="text-align: right; margin-bottom: 5px;"><strong>Bạn:</strong> ${question}</div>`;
                chatInput.value = "";

                // Gọi API ChatGPT
                try {
                    const response = await fetch(`http://localhost:5000/api/chatgpt/ask?question=${encodeURIComponent(question)}`);
                    const answer = await response.text();
                    chatBody.innerHTML += `<div style="text-align: left; margin-bottom: 5px;"><strong>Bot:</strong> ${answer}</div>`;
                } catch (error) {
                    chatBody.innerHTML += `<div style="text-align: left; color: red;">Lỗi khi lấy dữ liệu từ chatbot.</div>`;
                }

                // Cuộn xuống tin nhắn mới nhất
                chatBody.scrollTop = chatBody.scrollHeight;
            });

            // Gửi tin nhắn bằng phím Enter
            chatInput.addEventListener("keypress", (event) => {
                if (event.key === "Enter") {
                    chatSend.click();
                }
            });

            // ==========================
            //  📌 Kéo thả hộp thoại chat
            // ==========================
            let isDragging = false;
            let offsetX, offsetY;

            chatHeader.addEventListener("mousedown", (event) => {
                isDragging = true;
                offsetX = event.clientX - chatContainer.getBoundingClientRect().left;
                offsetY = event.clientY - chatContainer.getBoundingClientRect().top;
                chatContainer.style.cursor = "grabbing";
            });

            document.addEventListener("mousemove", (event) => {
                if (isDragging) {
                    let newX = event.clientX - offsetX;
                    let newY = event.clientY - offsetY;

                    // Giới hạn di chuyển trong màn hình
                    const maxX = window.innerWidth - chatContainer.offsetWidth;
                    const maxY = window.innerHeight - chatContainer.offsetHeight;

                    chatContainer.style.left = Math.max(0, Math.min(newX, maxX)) + "px";
                    chatContainer.style.top = Math.max(0, Math.min(newY, maxY)) + "px";
                }
            });

            document.addEventListener("mouseup", () => {
                isDragging = false;
                chatContainer.style.cursor = "grab";
            });
        });
    </script>



    @RenderSection("Scripts", required: false)
</body>
</html>
